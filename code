using namespace std;

struct record{
  int amount;
  string date;
  string type;
  string account;
  record * next;
};

void printmenu(){

int main(){
  getdata();                          //file input
  printmenu();
  int choice;
  cin>>choice;
  
  record * rec = new record;            //dynamic memory management
  
  
  while (choice!="END"){
  switch (choice){
  case 1:
    add();                              //exchange rate file input
    break;
  case 2:
    delete();
    break;
  case 3:
    edit();
    break;
  case 4:
    view();
    break;
  case 5:
    report();
    break;
  case 6:
    budget();
    break;
  case 7:
    forecast();
    break;
  default:
    cout<<"invalid input! Please input again!"<<endl;
    }
  }
  savedata();                           //file output
  delete();                             //avoid memory leakage
  return 0;
  }
